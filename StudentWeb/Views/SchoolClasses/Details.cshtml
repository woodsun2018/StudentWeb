@model StudentWeb.Models.SchoolClass

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>SchoolClass</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClassTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClassTitle)
        </dd>
        <dt class="col-sm-2">
            班上的同学
        </dt>
        <dd class="col-sm-10">
            @foreach (var student in Model.Students)
            {
                @student.Name<br />
            }
        </dd>
        <dt class="col-sm-2">
            班长
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClassMonitor.Name)
        </dd>
        <dt class="col-sm-2">
            语文课代表
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Chinese.Name)
        </dd>
        <dt class="col-sm-2">
            数学课代表
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mathematics.Name)
        </dd>
        <dt class="col-sm-2">
            班主任
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HeadTeacher.Name)
        </dd>
        <dt class="col-sm-2">
            语文老师
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ChineseTeacher.Name)
        </dd>
        <dt class="col-sm-2">
            数学老师
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MathTeacher.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
